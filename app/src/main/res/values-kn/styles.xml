<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionMenuTextAppearance">@style/MenuItems</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="MenuItems" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-dark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NavigationDraweItemText" parent="AppTheme">
        <item name="android:textSize">@dimen/nav_item_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>


</resources>
